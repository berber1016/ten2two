{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "paths": {
            "@/*": ["src/*"]
          },
    },
    "include": [".eslintrc.js", "src"],
  "exclude": ["node_modules"]
}